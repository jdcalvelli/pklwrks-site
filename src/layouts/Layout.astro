---
import '@fontsource-variable/doto';
import "../assets/reset.css"
import Header from "../components/Header.astro"
import Footer from "../components/Footer.astro";
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/logo.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>pklwrks LLC</title>
	</head>
	<body>
		<Header />
		<slot />
		<Footer />
	</body>
</html>

<style is:global>
	:root {
		--l1: #FFF8FF;
		--l2: #FFB88F;
		--l3: #307070;
		--l4: #3F1820;
	}
	html {
		background-color: var(--l1);
		margin: 0;
		width: 100%;
		height: 100%;
		scroll-behavior: smooth;
	}
	body {
		margin: auto;
		max-width: 100ch;
		font-family: "Doto Variable", sans-serif;
		font-weight: 600;
		color: var(--l3);
	}
	section {
		margin-top: 2ch;
		margin-bottom: 2ch;
		border-radius: 16px;
	}
	.intro {
		padding: 2ch;
		background-color: var(--l2);
		border-radius: 16px;
	}
	.client, .game, .info {
		padding: 2ch;
		background-color: var(--l1);
		border: 4px dotted var(--l4);
		border-radius: 2ch;
	}
	.reverse {
		text-align: right;
	}
	.client p, .game p, .info p {
		margin-top: 16px;
		margin-bottom: 16px;
	}
	h1 {
		margin-top: 64px;
		margin-bottom: 64px;
		margin-left: auto;
		margin-right: auto;
		font-size: 4rem;
		font-weight: 700;
		text-align: center;
	}
	h2 {
		margin: 16px;
		font-size: 2rem;
		text-align: center;
	}
	h3 {
		font-size: 1.5rem;
	}
	p {
		line-height: 24px;
	}
	a {
		color: var(--l3);
	}
	a:hover {
		color: var(--l4);
	}
		section {
		margin-top: 2ch;
		margin-bottom: 2ch;
	}
	em {
		font-style: italic;
	}
</style>